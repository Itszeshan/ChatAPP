<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/incoming_layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:background="@drawable/bubble_out"
        android:backgroundTint="@android:color/white">

        <ImageView

        android:id="@+id/media"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:maxHeight="150dp"
        android:maxWidth="100dp"
        android:src="@drawable/facebook_avatar"
        android:visibility="gone"/>

        <TextView
            android:layout_below="@id/media"
            android:id="@+id/textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:autoLink="web"
            android:text="Rahul Agrawal is a good boy but he does not know what he wants."
            style="@style/chat_text_message_style"/>

    </RelativeLayout>

    <TextView
        android:layout_below="@id/incoming_layout_bubble"
        android:id="@+id/textview_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:paddingRight="5dp"
        android:text="11:15 PM"
        style="@style/chat_timings"/>


</RelativeLayout>